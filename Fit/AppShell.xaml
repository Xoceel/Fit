<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Fit.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Fit.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Fit">
    <!--# {OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}-->
    <TabBar>
        <ShellContent
            Title="Training"
            ContentTemplate="{DataTemplate views:TrainingTrackingPage}"
            Icon="dumbbell.png"
            Route="TrainingTrackingPage" />

        <ShellContent
        Title="Weight"
        ContentTemplate="{DataTemplate views:WeightTrackingPage}"
        Icon="scale.png"
        Route="WeightTrackingPage" />

        <ShellContent
        Title="Calories"
        ContentTemplate="{DataTemplate views:CalorieTrackingPage}"
        Icon="calorie.png"
        Route="CalorieTrackingPage" />
    </TabBar>
</Shell>

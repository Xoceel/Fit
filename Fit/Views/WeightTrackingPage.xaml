<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fit.Views.WeightTrackingPage"
             xmlns:chart="clr-namespace:Syncfusion.Maui.Charts;assembly=Syncfusion.Maui.Charts"
             xmlns:cards="clr-namespace:Syncfusion.Maui.Cards;assembly=Syncfusion.Maui.Cards">

    <Shell.TitleView>
        <Label Text="Track Your Weight" HorizontalOptions="Center" VerticalOptions="Center" FontSize="26"/>
    </Shell.TitleView>

    <Grid Padding="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height=".5*"/>
            <RowDefinition Height=".5*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width=".5*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border StrokeShape="RoundRectangle 10" Grid.ColumnSpan="3" BackgroundColor="#FFFFFF">

             <chart:SfCartesianChart>

                <chart:SfCartesianChart.Resources>
                    <DataTemplate x:Key="tooltipTemplate">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Item.Weight}"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"/>
                            <Label Text="kg - "
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"/>
                            <Label Text="{Binding Item.Date}"
                                    TextColor="White"
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"/>
                        </StackLayout>
                    </DataTemplate>
                </chart:SfCartesianChart.Resources>

                <chart:SfCartesianChart.ZoomPanBehavior>
                    <chart:ChartZoomPanBehavior/>
                </chart:SfCartesianChart.ZoomPanBehavior>

                <chart:SfCartesianChart.XAxes>
                        <chart:CategoryAxis PlotOffsetStart="30" PlotOffsetEnd="30"/>
                    </chart:SfCartesianChart.XAxes>

                <chart:SfCartesianChart.YAxes>
                    <chart:NumericalAxis PlotOffsetStart="30" PlotOffsetEnd="30"/>
                </chart:SfCartesianChart.YAxes>

                <chart:SplineSeries ItemsSource="{Binding WeightEntries}"
                                    XBindingPath="Date"
                                    YBindingPath="Weight"
                                    Type="Cardinal"
                                    ShowMarkers="True"
                                    EnableTooltip="True"
                                    TooltipTemplate="{StaticResource tooltipTemplate}"/>    
            </chart:SfCartesianChart>

        </Border>


            
            
        <Entry Placeholder="Enter weight in"
            Grid.Row="1"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Start"
            Margin="0, 20, 0, 20"
            Text="{Binding WeightEntered}"
            Keyboard="Numeric">
               
        </Entry>

        <Label Text="kg" 
                Margin="10"
                VerticalTextAlignment="Center" 
                HorizontalOptions="Start" 
                Grid.Row="1"
                Grid.Column="1"></Label>

        <Button Text="Add Weight Entry"
                Grid.Row="1"
                Grid.Column="3"
                Margin="0, 10"
                Command="{Binding AddWeightCommand}" >
            
        </Button>

        <Button Text="Delete Last Weight Entry"
                Grid.Row="2"
                Margin="0, 10"
                Grid.ColumnSpan="3"
                Command="{Binding DeleteLastWeightEntryCommand}">
        </Button>

    </Grid>
    
</ContentPage>
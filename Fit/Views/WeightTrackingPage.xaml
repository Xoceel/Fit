<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fit.Views.WeightTrackingPage"
             Title="WeightTrackingPage">
    <VerticalStackLayout>
        <Frame BorderColor="Gray"
               CornerRadius="5"
               Padding="8">
            <StackLayout>
                <Label Text="Enter Current Weight"
                       FontSize="14"
                       FontAttributes="Bold" />
                <Grid ColumnDefinitions="75, 25"
                      RowDefinitions="*">
                    <Button Text="Add Weight"
                            BackgroundColor="#512BD4"
                            TextColor="White"
                            FontSize="14"
                            CornerRadius="5"
                            HeightRequest="30"
                            VerticalOptions="End" />
                </Grid>
                
            </StackLayout>
        </Frame>
    </VerticalStackLayout>
</ContentPage>
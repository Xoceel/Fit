<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fit.Views.WeightTrackingPage"
             Title="WeightTrackingPage">

    <VerticalStackLayout Padding="20">

        <!-- Show list of weight entries -->
        <CollectionView ItemsSource="{Binding WeightEntries}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Label Text="{Binding Date, StringFormat='{0:dd MMM yyyy}'}"
                               WidthRequest="120"/>
                        <Label Text="{Binding Weight, StringFormat='{0} kg'}"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Button to add new entry -->
        <Button Text="Add Weight Entry"
                Command="{Binding AddWeightCommand}" />
        <Button Text="Delete All Weight Entries"
                Command="{Binding DeleteAllWeightEntriesCommand}" />
    </VerticalStackLayout>
    
</ContentPage>
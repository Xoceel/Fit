<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             x:Class="Fit.Views.TrainingTrackingPage"
             Title="TrainingTrackingPage">

    <VerticalStackLayout Padding="20">

        <!-- Show list of weight entries -->

        <CollectionView ItemsSource="{Binding ExerciseEntries}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Label Text="{Binding Date, StringFormat='{0:dd MMM yyyy}'}"
                                WidthRequest="120"/>
                        <Label Text="{Binding ExerciseName}" />
                        <Label Text="{Binding Sets}"/>
                        <Label Text="{Binding Reps}"/>
                        <Label Text="{Binding Weight}"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Button to add new entry -->
        <HorizontalStackLayout>
            <Button Text="Add Workout Entry"
                    Command="{Binding AddExerciseCommand}" />
            <Button Text="Delete All Workout Entries"
                    Command="{Binding DeleteAllExercisesCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
    
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fit.Views.CalorieTrackingPage"
             Title="CalorieTrackingPage">
    
    <VerticalStackLayout Padding="20">
        
        <CollectionView ItemsSource="{Binding CalorieEntries}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout>
                        <Label Text="{Binding Date, StringFormat='{0:dd MMM yyyy}'}" 
                               WidthRequest="120"/>
                        <Label Text="{Binding Calories, StringFormat='{0} kcal'}"/>
                        <Label Text="{Binding Protein, StringFormat='{0} g'}"/>
                        <Label Text="{Binding Fat, StringFormat='{0} g'}"/>
                        <Label Text="{Binding Carbs, StringFormat='{0} g'}"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Add Weight Entry"
                Command="{Binding AddCalorieCommand}" />
    </VerticalStackLayout>
    
</ContentPage>